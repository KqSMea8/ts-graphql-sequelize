{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended",
		"tslint-config-airbnb"
	],
	"jsRules": {},
	"rules": {
		"semicolon": [true, "never"],
		"no-if-statement": false,
		"max-line-length": [
			true,
			120
		],
		"import-name": [
			true,
			{
				"pod": "KubernetesPod",
				"service": "KubernetesService",
				"kubernetes": "k8sClient"
			}
		],
		"object-shorthand-properties-first": false,
		"only-arrow-functions": false
	},
	"rulesDirectory": []
}